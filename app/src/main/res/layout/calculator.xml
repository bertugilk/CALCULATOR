<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#120723">
    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#131F60"
        android:textColor="#F9FDFD"
        android:textSize="30sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="CE"
            android:textSize="35sp"
            android:textStyle="bold"
            android:background="@drawable/keyboard_btn"
            android:textColor="#E80909">
        </Button>
        <Button
            android:id="@+id/btnDEL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="DELETE"
            android:textSize="35sp"
            android:textStyle="bold"
            android:background="@drawable/keyboard_btn"
            android:textColor="#E60F0F">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="7"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="8"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="9"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnBol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="/"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="4"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="5"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="6"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnCarp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="*"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="1"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="2"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="3"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnCikar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="-"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="0"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnNokta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="."
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnEsittir"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="="
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnTopla"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:textColor="#13B1AC"
            android:text="+"
            android:textSize="40sp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>
</LinearLayout>